@model DataOutput
 <div class="card card-title m-1 p-1">
<table>
    <thead>
        <tr>
            <th>Truck number</th>
            <th>Truck model</th>
            <th>Truck make</th>
            <th>Route number</th>
        </tr>
    </thead>
    <tbody>
			<div class="bg-light p-1">
        @foreach (var item in Model.Trucks)
        { 
       
                <tr>
                <td>@item.TruckID</td>
                    <td>@item.t_model</td>
                    <td>@item.t_make</td>
                <td>@item.RouteID</td>
				</tr>
	
				}
</div> 
    </tbody>
</table>

<form method="post" asp-action="AddTruck">
	<div asp-validation-summary="All"></div>

	<p>
		<label asp-for="@Model.Truck.t_model">Truck model: </label>
		<input asp-for="@Model.Truck.t_model" />
	</p>

	<p>
		<label asp-for="@Model.Truck.t_make">Truck make: </label>
		<input asp-for="@Model.Truck.t_make" />
	</p>

	<p>
		<label asp-for="@Model.Truck.RouteID">Route number: </label>
		<select asp-for="@Model.Truck.RouteID">
			@foreach (var item in Model.Routes)
			{
				<option value="@item.RouteID">@item.RouteID</option>
			}	
		</select>
	</p>
	<input type="hidden" value="placeholder" asp-for="Account.Fname" />
	<input type="hidden" value="placeholder" asp-for="Account.Lname" />
	<input type="hidden" value="placeholder@placeholder.com" asp-for="Account.Email" />
	<input type="hidden" value="placeholder" asp-for="Account.Password" />
	<input type="hidden" value="placeholder" asp-for="Account.CPassword" />
	<input type="hidden" value="placeholder" asp-for="Trucks" />
	<input type="hidden" value="placeholder" asp-for="Routes" />
	<input type="hidden" value="placeholder" asp-for="Users" />
	<input type="hidden" value="placeholder" asp-for="Route.route_name" />
	<input type="hidden" value="placeholder" asp-for="Route.r_length" />
	<input type="hidden" value="placeholder" asp-for="Route.r_pay_per_km" />
	<button type="submit">ADD Truck</button>
	<a asp-action="Bdash"> Back to Dashboard</a>
</form>